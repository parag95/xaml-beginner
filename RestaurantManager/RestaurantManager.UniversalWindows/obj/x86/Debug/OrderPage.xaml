<Page
    x:Class="RestaurantManager.UniversalWindows.OrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:DataManager="using:RestaurantManager.Models">
   
    
    <Grid Background="Black">
        <Grid.DataContext>
            <DataManager:DataManager></DataManager:DataManager>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
            <ColumnDefinition Width="0.2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <AppBar Grid.ColumnSpan="3">
            <AppBarButton x:ConnectionId='3' Icon="Home"                           ></AppBarButton>
        </AppBar>
        <TextBlock Text="Special Requests: Order Items: " Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" ></TextBlock>
        <Button Content="Add to Order" Grid.Row="4" HorizontalAlignment="Center" ></Button>
        <Button Content="Submit Order" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" ></Button>
        <ListView x:ConnectionId='1' Name="AddToOrderListView" Grid.Row="2" BorderBrush="#FFCB2D2D" Grid.Column="0" ItemsSource="{Binding MenuItems}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="White"></Setter>
                    <Setter Property="FontSize" Value="30"></Setter>
                </Style>
            </ListView.ItemContainerStyle>  
        </ListView>
        
        <ListView x:ConnectionId='2' Name="SubmitOrderListView" Grid.Row="2" BorderBrush="#FFCB2D2D" Grid.Column="2" ItemsSource="{Binding CurrentlySelectedMenuItems}" >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="White"></Setter>
                    <Setter Property="FontSize" Value="30"></Setter>
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>
    </Grid>
</Page>

